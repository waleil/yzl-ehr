  <sql id="Base_Column_List">
    id, name,`desc`, attachment_path, create_time, creator, update_time,
    updator, state,
  </sql>

  <sql id="Courseware_Column_List">
    t.id,t.name,t.desc,t.attachment_path,t.create_time,t.creator,t.update_time,
    t.updator,t.state,t.depart_id,
  </sql>

  <select id="selectByPrimaryKey"  parameterType="java.lang.Integer" resultMap="CoursewareResultMap">
   select
	t.id,t.name,t.desc,t.attachment_path,date_format(t.create_time,'%Y-%m-%d %H:%i:%s') as create_time,
	date_format(t.update_time,'%Y-%m-%d %H:%i:%s') as update_time,t.creator,t.updator,t.state,x.id as depart_id,
	x.name as depart_name,e.code as type_id,e.value as type_name
	from
	(
	select a.id,a.name,a.desc,a.attachment_path,a.create_time,a.creator,a.update_time,
    a.updator,a.state,b.depart_id,d.type_id
	from courseware a
	left join courseware_depart b on ( a.id=b.courseware_id and b.is_del=0)
	left join courseware_category_relation  d on ( a.id=d.courseware_id and d.is_del=0 )
	where a.is_del=0 and a.id =#{id,jdbcType=INTEGER}
	) t
	join depart x on ( t.depart_id=x.id and x.is_del=0 )
	join courseware_category_dict e on (t.type_id=e.id and e.is_del=0)
  </select>

  <select id="selectList" parameterType="cn.net.yzl.ehr.vojo.QueryCoursewareParam" resultMap="CoursewareResultMap"  >
    select
    t.id,t.name,t.desc,t.attachment_path,date_format(t.create_time,'%Y-%m-%d %H:%i:%s') as create_time,
    date_format(t.update_time,'%Y-%m-%d %H:%i:%s') as update_time,t.creator,t.updator,t.state,x.id as depart_id,
    x.name as depart_name,e.id as type_id,e.name as type_name
    from
    (
    select a.id,a.name,a.desc,a.attachment_path,a.create_time,a.creator,a.update_time,
    a.updator,a.state,b.depart_id,d.type_id
    from courseware a
    inner join courseware_depart b
    on ( a.id=b.courseware_id and b.is_del=0
    <if test="departId != null and departId != 0">
      and b.depart_id=#{departId,jdbcType=INTEGER}
    </if>
    )
    inner join courseware_category_relation  d
    on ( a.id=d.courseware_id and d.is_del=0
    <if test="typeId != null and typeId !=0">
      and d.type_id=#{typeId,jdbcType=INTEGER}
    </if>
    )
    where a.is_del=0
    <if test="name != null">
      and a.name like concat('%',#{name,jdbcType=VARCHAR},'%')
    </if>
    ) t
    join depart x
    on ( t.depart_id=x.id and x.is_del=0 )
    join courseware_category_dict e
    on (t.type_id=e.id  and e.is_del=0)
    order by t.create_time desc
  </select>

